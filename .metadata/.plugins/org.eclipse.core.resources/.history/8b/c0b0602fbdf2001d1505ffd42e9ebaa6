package oops;


class Pen
{
	//variables , data member
	static int price = 50;
	String color = "Red";
	String company = "Cello";
	
	//method , function member
	public void toWrite()
	{
		System.out.println(price+" "+color+" "+company);
	}
}

public class O001_FirstDemo {
	public static void main(String[] args) {
		
		
		Pen p1 = new Pen();
		p1.price=100;
		p1.toWrite();
		
		Pen p2 = new Pen();
		p2.toWrite();
		
		
	}
}
