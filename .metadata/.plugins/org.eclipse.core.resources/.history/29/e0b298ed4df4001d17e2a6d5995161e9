package oops;


class Pen
{
	//variables , data member
	static int price = 50;
	String color = "Red";
	String company = "Cello";
	
	//method , function member
	public void toWrite()
	{
		System.out.println(price+" "+color+" "+company);
	}
	
	public static void Sample()
	{
		System.out.println("running sample");
	}
}

public class O001_FirstDemo {
	public static void main(String[] args) {
		
		Pen.price=800;
		
		Pen p1 = new Pen();
		p1.toWrite();
		
		Pen p2 = new Pen();
		p2.toWrite();
		
		Pen.Sample();
		
		
	}
}
